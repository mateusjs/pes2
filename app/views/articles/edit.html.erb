<h1>Editar informacoes sobre o filme</h1>
 
<%= form_for :article, url: article_path(@article), method: :patch do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <p>
    <%= f.label :Titulo %><br>
    <%= f.text_field :title %>
    </p>
  </p>
 
  <p>
    <%= f.label :Nota %><br>
    <%= f.text_area :text %>
  </p>
   <p>
    <%= f.label :Data%><br>
    <%= f.text_area :data %>
  </p>
 
 
  <p>
    <%= f.submit %>
   
  </p>
  <%= link_to 'Deletar', article_path(@article),
              method: :delete,
              data: { confirm: 'Tem certeza que deseja deletar este filme da lista ?' } %>
  <%= link_to 'Back', articles_path %>
  
 
<% end %>
 
